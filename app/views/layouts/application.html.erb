<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>

    <meta name="keywords" content="<%= @seo_keywords %>" />

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <!--START OF BODY-->
  <body class="d-flex align-items-center justify-content-center">
    <div class="d-flex align-items-center justify-content-center">
      <%= video_tag(
              'bg.mp4',
              id: "background",
              autoplay: true,
              loop: true,
              muted: true,
              )
      %>
      <div class="main-frame">
        <nav class="card-group-vertical">
          <div class="card block-logo">
            <div class="card-body">
              <h5 class="card-title">M</h5>
              <h5 class="card-title h">H</h5>
            </div>
          </div>
          <div class="card link-box">
            <div class="card-body">
              <%= link_to "About", about_me_path, class: "app-link"%>
              <!--<p class="card-title app-link">About</p>-->
            </div>
          </div>
          <div class="card link-box">
            <div class="card-body">
              <%= link_to "Contact", contact_path, class: "app-link"%>
            </div>
          </div>
          <div class="card link-box">
            <div class="card-body">
              <%= link_to "My Work", portfolios_path, class: "app-link"%>
            </div>
          </div>
            <!--<h1><%= link_to "MH", root_path %></h1>-->
        </nav>
        <!--RIGHT NAV BAR-->
        <div class="right-nav">
          <!--SIGN UP DROP DOWN-->
          <div class="accordion w-50 h-25 app-login" id="accordionExample">
            <div class="card">
              <div class="card-header white" id="headingOne">
                <h5 class="mb-0">
                  <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                    Sign Up
                  </button>
                </h5>
              </div>
            </div>
          </div>
          <!--SIGN IN DROP DOWN -->
          <div class="accordion w-50 h-25 app-login" id="accordionExample">
          <div class="card ">
            <div class="card-header white" id="headingOne">
              <h5 class="mb-0">
                <button class="btn btn-link " type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                  Sign In
                </button>
              </h5>
            </div>
          </div>
        </div>
        </div>
        <%= yield %>


        <%= render "shared/application_footer" %>

        <!--<%= source_helper("application") %>-->
      </div>

    </div>
  </body>
</html>